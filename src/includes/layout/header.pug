include ../components/button.pug

header.header 
  .container 
    .header-wrapper.d-flex.align-items-center.justify-content-between 
      .header-logo 
        img(src="./assets/images/logo.svg", alt="")
      form(action="#").header-search.d-flex
        .search-filter
          select(style="display: none;")
            option(value="all") Tất cả các sách
            option(value="ebook") Ebook
            option(value="audio-book") Audio book
            option(value="video-book") Video
          
          .dropdown.js-dropdown-option
            button.dropdown-toggle.button-component.hide-dropdown-icon.d-flex.align-items-center.justify-content-center#headerSearchFilter(data-toggle="dropdown" aria-expanded="false" type="button")
              <svg class="button-icon" fill="#00559F" width="12" height="8" viewBox="0 0 12 8" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M4.66667 8H7.33333V6.66667H4.66667V8ZM0 0V1.33333H12V0H0ZM2 4.66667H10V3.33333H2V4.66667Z"/></svg>
              span.button-title Tất cả các sách
            ul.dropdown-menu(aria-labelledby="headerSearchFilter").custom-style-dropdown
              li
                .dropdown-item(data-selectvalue="all")
                  .button-component.d-flex.align-items-center.justify-content-center
                    <svg class="button-icon" fill="#00559F" width="12" height="8" viewBox="0 0 12 8" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M4.66667 8H7.33333V6.66667H4.66667V8ZM0 0V1.33333H12V0H0ZM2 4.66667H10V3.33333H2V4.66667Z"/></svg>
                    span.button-title Tất cả các sách
              li
                .dropdown-item(data-selectvalue="ebook")
                  .button-component.d-flex.align-items-center.justify-content-center
                    <svg class="button-icon" width="12" height="15" viewBox="0 0 12 15" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 2.16683H2.66667C2.31304 2.16683 1.97391 2.30731 1.72386 2.55735C1.47381 2.8074 1.33333 3.14654 1.33333 3.50016C1.33333 3.85378 1.47381 4.19292 1.72386 4.44297C1.97391 4.69302 2.31304 4.8335 2.66667 4.8335H12V13.5002C12 13.677 11.9298 13.8465 11.8047 13.9716C11.6797 14.0966 11.5101 14.1668 11.3333 14.1668H2.66667C1.95942 14.1668 1.28115 13.8859 0.781048 13.3858C0.280951 12.8857 0 12.2074 0 11.5002V3.50016C0 2.79292 0.280951 2.11464 0.781048 1.61454C1.28115 1.11445 1.95942 0.833496 2.66667 0.833496H11.3333C11.5101 0.833496 11.6797 0.903734 11.8047 1.02876C11.9298 1.15378 12 1.32335 12 1.50016V2.16683ZM11.3333 4.16683H2.66667C2.48986 4.16683 2.32029 4.09659 2.19526 3.97157C2.07024 3.84654 2 3.67697 2 3.50016C2 3.32335 2.07024 3.15378 2.19526 3.02876C2.32029 2.90373 2.48986 2.8335 2.66667 2.8335H11.3333V4.16683Z" fill="#2E82BC"/></svg>
