        .search-input 
          input(type="text" placeholder="Nhập tên sách, tác giả bạn muốn tìm kiếm...")

        .search-btn 
          +Button({ icon: './assets/icons/icon-search-white.svg', className: 'primary icon' })
      .header-btn-groups.d-flex
        div(data-toggle="modal" data-target="#modalLogin")
          +Button({ type: 'link', link: '#', title: 'Giant Club', icon: 'icon-user-plus-blue.svg', className: 'outline-primary' })
        +Button({ type: 'link', link: '#', title: 'Đăng ký', icon: 'icon-login-blue.svg', className: 'outline-primary' })
